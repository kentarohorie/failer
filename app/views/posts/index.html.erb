<div class="my-3 p-3 bg-white rounded box-shadow">
  <h6 class="border-bottom border-gray pb-2 mb-0">人気の投稿</h6>
  <% @posts.each do |post| %>
    <div class="media text-muted pt-3">
      <img data-src="holder.js/32x32?theme=thumb&amp;bg=007bff&amp;fg=007bff&amp;size=1" alt="32x32" class="mr-2 rounded" src="https://placehold.jp/150x150.png" data-holder-rendered="true" style="width: 32px; height: 32px;">
      <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
        <div class="d-flex justify-content-between align-items-center w-100">
          <strong class="text-gray-dark"><%= post.title %></strong>
          <a href="#">Follow</a>
        </div>
        <span class="d-block"><%= post.user.name %></span>
      </div>
    </div>
  <% end %>
  <small class="d-block text-right mt-3">
    <a href="#">All suggestions</a>
  </small>
</div>